@model IEnumerable<CodeFirstApproachExample.Models.Employee>

@{
    ViewData["Title"] = "Index";
    
}

<h1 class="my-4 text-center text-dark emp-l">Employee List</h1>

<p class="text-center">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<div class="container mt-4">
    <table class="table table-striped table-bordered table-hover animated-table">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Gender)</th>
                <th>@Html.DisplayNameFor(model => model.Age)</th>
                <th>@Html.DisplayNameFor(model => model.Salary)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-row">
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                    <td>@Html.DisplayFor(modelItem => item.Age)</td>
                    <td>@Html.DisplayFor(modelItem => item.Salary)</td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- Custom Styling for Transparency and Animation -->
<style>
    /* Table Styling */
    .animated-table {
        animation: fadeIn 1s ease-in-out;
        background-color: rgba(248, 249, 250, 0.9); /* Semi-transparent background */
        backdrop-filter: blur(6px); /* Optional blur effect for background */
        border-radius: 8px;
    }

    /* Table Row Animation */
    .table-row {
        animation: fadeInRow 1.5s ease-out;
    }

        /* Hover Effects on Table Rows */
        .table-row:hover {
            background-color: rgba(240, 240, 240, 0.8);
            transform: scale(1.02);
            transition: background-color 0.3s, transform 0.3s;
        }

    /* Table Header Styling */
    .thead-dark {
        background-color: #343a40;
        color: white;
    }

    /* Action Buttons - Styling */
    .btn {
        text-transform: capitalize;
        font-weight: bold;
        border-radius: 5px;
    }

    /* Action Button Hover Effects */
    .btn-warning:hover {
        background-color: #e67e22;
        color: white;
    }

    .btn-info:hover {
        background-color: #17a2b8;
        color: white;
    }

    .btn-danger:hover {
        background-color: #dc3545;
        color: white;
    }

    /* Table Column Styling */
    td, th {
        padding: 12px;
        vertical-align: middle;
    }

    /* Styling Table Container for Responsiveness */
    .container {
        max-width: 90%;
        margin: 0 auto;
    }

    .emp-l{
        
        
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }
    h1{
        color: white !important;
    }
</style>