       


@model CodeFirstApproachExample.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center bg-warning text-white ">Edit Employee</h1>
<h4 class="text-center text-dark bg-info">Employee Details</h4>
<hr />

<div class="containerE">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form asp-action="Edit">
                
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Hidden field for the employee Id -->
                <input type="hidden" asp-for="Id" />

                <!-- Name input -->
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter Employee Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Gender input -->
                <div class="form-group">
                    <label asp-for="Gender" class="control-label">Gender</label>
                    <input asp-for="Gender" class="form-control form-control-lg" placeholder="Enter Gender" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <!-- Age input -->
                <div class="form-group">
                    <label asp-for="Age" class="control-label">Age</label>
                    <input asp-for="Age" class="form-control form-control-lg" placeholder="Enter Age" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <!-- Salary input -->
                <div class="form-group">
                    <label asp-for="Salary" class="control-label">Salary</label>
                    <input asp-for="Salary" class="form-control form-control-lg" placeholder="Enter Salary" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <!-- Submit button -->
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-warning btn-lg w-100 mt-1" />
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Back to List Link -->
<div class="text-center ">
    <a asp-action="Index" class="btn btn-outline-danger btn-back">Back to List</a>
</div>

<!-- Include Scripts for Validation -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<!-- Custom CSS for Styling -->
<style>
    /* Body background and general container styling */
    body {
        background-color: #f8f9fa;
    }

    /* Header Styling */
    h1, h4 {
        font-family: 'Arial', sans-serif;
        font-weight: bold;
    }

    .btn-back {
        position: relative;
        top: 5px;
    }

    /* Transparent form container */
    .containerE {
        background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent background */
        padding-top: 5px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Form controls styling */
    .form-control {
        border-radius: 8px;
        font-size: 1.1rem;
        padding: 10px;
        background-color: rgba(255, 255, 255, 0.9);
        transition: background-color 0.3s;
    }

    .form-control:focus {
        background-color: #fff;
        border-color: #ff6f61;
        box-shadow: 0 0 5px rgba(255, 111, 97, 0.6);
    }

    /* Button Styling */
    .btn-warning {
        background-color: #ff6f61;
        border-color: #ff6f61;
        font-weight: bold;
    }

    .btn-warning:hover {
        background-color: #e95c4d;
        border-color: #e95c4d;
    }

    /* Action Buttons */
    .btn-outline-danger {
        text-decoration: none;
        font-weight: bold;
        color: #e95c4d;
        border-color: #e95c4d;
    }

    .btn-outline-danger:hover {
        background-color: #e95c4d;
        color: white;
    }

    /* Error message styling */
    .text-danger {
        font-size: 0.875rem;
        font-weight: normal;
    }

    /* Add padding for links */
    .text-center a {
        margin-top: 10px;
    }

    /* Optional Box Shadow for Enhanced Form Look */
    .form-group input.form-control {
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
    }
</style>
