

@model CodeFirstApproachExample.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<!-- Title Section with background and centered text -->
<h1 class="text-center bg-danger text-white py-4">Delete Employee</h1>

<div class="container mt-4">
    <!-- Card for Employee Details with Transparent Background -->
    <div class="card shadow-lg mb-2 bg-transparent rounded">
        <h4 class="text-center text-dark">Employee Information</h4>
        <hr />
        <dl class="row">
            <!-- Name -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <!-- Gender -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Gender)
            </dd>

            <!-- Age -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Age)
            </dd>

            <!-- Salary -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Salary)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Salary)
            </dd>
        </dl>
    </div>

    <!-- Delete Confirmation Form -->
    <div class="text-center mt-2">
        <h3>Are you sure you want to delete this employee?</h3>
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger btn-lg mr-2" />
        </form>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<!-- Custom Styling for Transparency -->
<style>
    /* Card with Transparent Background and Shadow Effect */
    .card {
        background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent white background */
        backdrop-filter: blur(8px); /* Optional blur effect */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Light shadow for the card */
    }

    /* Adjust text-center for proper alignment */
    .text-center {
        text-align: center !important;
    }

    /* Button styling */
    .btn-danger {
        background-color: #e74c3c;
        color: white;
        font-weight: bold;
    }

    .btn-outline-secondary {
        border-color: #ccc;
        color: #555;
        font-weight: bold;
        text-decoration: none;
    }

    /* Button Hover Effects */
    .btn-danger:hover {
        background-color: #c0392b;
        color: white;
    }

    .btn-outline-secondary:hover {
        background-color: #f8f8f8;
        color: #333;
    }

    h4 {
        position: relative;
        top: 9px;
    }

    /* Adjust description list (dl) */
    dl.row dt {
        font-weight: bold;
        color: #333;
    }
    dl.row{
        padding-left: 8px;
    }

    dl.row dd {
        color: #555;
    }
</style>
